<Window x:Class="Rou.Windows.IconSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rou.Windows"
        xmlns:mi="clr-namespace:MaterialIcons;assembly=MaterialIcons"
        mc:Ignorable="d"
        Title="Select Icon - Rou" Height="382" Width="272" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Foreground="White" Background="{x:Null}">
    <Window.Effect>
        <DropShadowEffect ShadowDepth="3" Opacity="0.7" Color="#FF171717"/>
    </Window.Effect>
    <Grid Margin="10" Background="#FF171717">
        <Label x:Name="label" Content="Select Icon" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="20" Margin="5,0,0,0"/>
        <mi:MaterialIcon Icon="ic_close" Foreground="White" Width="24" Height="24" Margin="0,6,7,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <ScrollViewer Margin="0,42,0,0" Padding="10" PanningMode="VerticalOnly" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="Container" Margin="0" VerticalAlignment="Top" />
        </ScrollViewer>
    </Grid>
</Window>
